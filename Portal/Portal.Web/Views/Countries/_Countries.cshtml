<div class="rg-countries-aside">

    @if (Model != "Italy")
    {
        <div class="rg-countries-aside__slide">
            <a href="/اخذ-اقامت-ایتالیا">
                <img src="~/img/migration-to-italy-small.png" alt="#">
                <h3>
                    اخذ اقامت دائم در کشور ایتالیا
                </h3>
            </a>
        </div>
    }
    @if (Model != "Portugal")
    {
        <div class="rg-countries-aside__slide">
            <a href="/اخذ-اقامت-پرتغال">
                <img src="~/img/migration-to-portugal-small.png" alt="migration to portugal">
                <h3>
                    اخذ اقامت دائم در کشور پرتغال
                </h3>
            </a>
        </div>
    }
    @if (Model != "Slovenia")
    {
        <div class="rg-countries-aside__slide">
            <a href="/اخذ-اقامت-اسلوونی">
                <img src="~/img/migration-to-slovenia-small.png" alt="migration to slovenia">
                <h3>
                    اخذ اقامت دائم در کشور اسلوونی
                </h3>
            </a>
        </div>
    }

    @if (Model != "AboutItaly")
    {
        <div class="rg-countries-aside__slide">
            <a href="/درباره-ایتالیا">
                <img src="~/img/about-italy-small.png" alt="about italy">
                <h3>
                    در مورد ایتالیا بیشتر بدانید
                </h3>
            </a>
        </div>
    }
    @if (Model != "AboutPortugal")
    {
        <div class="rg-countries-aside__slide">
            <a href="/درباره-پرتغال">
                <img src="~/img/about-portugal-small.png" alt="about portugal">
                <h3>
                    در مورد پرتغال بیشتر بدانید
                </h3>
            </a>
        </div>
    }
    @if (Model != "AboutSlovenia")
    {
        <div class="rg-countries-aside__slide">
            <a href="/درباره-اسلوونی">
                <img src="~/img/about-slovenia-small.png" alt="about slovenia">
                <h3>
                    در مورد اسلوونی بیشتر بدانید
                </h3>
            </a>
        </div>
    }
</div>